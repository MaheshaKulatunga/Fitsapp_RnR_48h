.container
  %h1 New message
  = form_for @message do |f|
    = f.hidden_field :sender , :value => current_user.email
    = f.label :receiver
    %br/
    = f.text_field :receiver
    %br/
    %br/
    = f.label :subject
    %br/
    = f.text_field :subject
    %br/
    %br/
    = f.label :body
    %br/
    = f.text_area :body
    %br/
    %br/
    = f.button :submit, :class => "btn btn-success"
